								   class="layui-input">
						</div>
					</div>
				</div>

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">是否展示：</label>
					<div class="layui-input-inline">
						<select name="isShow">
							<option value="0" >隐藏</option>
							<option value="1" selected="selected">展示</option>
