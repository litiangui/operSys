<!DOCTYPE html>
<html>
<head th:replace="tmpl :: header(~{::title},~{::style},~{::script})">
<title>管理员列表</title>
<style type="text/css">
.layui-form-checkbox {
	margin: 5px 0px 5px 10px;
}

#resourceTree {
	padding: 10px;
}
</style>
<script type="text/html" id="isDisabledTpl">
  <input type="checkbox" value="{{d.id}}" lay-skin="switch" lay-text="是|否" lay-filter="isDisabledFilter" {{ d.isDisabled == false ? '' : 'checked' }}>
</script>
<script type="text/html" id="editBar">
	<a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
	<a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="grant">授权</a>
	<a class="layui-btn layui-btn-xs" lay-event="details">详细</a>
</script>
</head>
<body>
	<div style="margin: 15px;">
		<form class="layui-form data-list-form">
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">管理员用户名:</label>
					<div class="layui-input-inline">
						<input type="text" class="layui-input" name="name" maxlength="20"
							placeholder="请输入管理员用户名">
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">手机号码:</label>
					<div class="layui-input-inline">
						<input type="text" class="layui-input" name="phone" maxlength="11"
							placeholder="请输入手机号码">
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">真实姓名:</label>
					<div class="layui-input-inline">
						<input type="text" class="layui-input" name="realName"
							maxlength="20" placeholder="请输入真实姓名">
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">是否禁用</label>
					<div class="layui-input-inline">
						<select name="isDisabled">
							<option value="0" selected="selected">未禁用</option>
							<option value="1">已禁用</option>
						</select>
					</div>
				</div>
				<div class="layui-inline">
					<div class="layui-input-block">
						<a class="layui-btn" data-type="reload">搜索</a> <a
							href="javascript:;" class="layui-btn layui-btn-normal btn-add">添加</a>
					</div>
				</div>
			</div>
		</form>
		<table class="layui-hide data-list" lay-filter="data-list"></table>
	</div>

	<div class="layer-open-form edit-form">
		<form class="layui-form">
			<input type="hidden" name="id" />
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">用户名：</label>
					<div class="layui-input-inline">
						<input type="text" name="name" lay-verify="required|normal|space"
							maxlength="20" placeholder="用户名长度小于20个字符" autocomplete="off"
							class="layui-input">
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">登录密码：</label>
					<div class="layui-input-inline">
						<input type="password" id="adminPwd" name="pwd" maxlength="20"
							placeholder="请输入6-32位密码" autocomplete="off"
							lay-verify="required|pwd|space" class="layui-input">
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">真实姓名：</label>
					<div class="layui-input-inline">
						<input type="text" name="realName" autocomplete="off"
							maxlength="20" lay-verify="required|normal|space"
							class="layui-input">
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">手机号码：</label>
					<div class="layui-input-inline">
						<input type="text" name="phone" lay-verify="required|phone"
							autocomplete="off" class="layui-input">
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">是否禁用：</label>
					<div class="layui-input-inline">
						<input type="radio" name="isDisabled" value="0" title="否" checked />
						<input type="radio" name="isDisabled" value="1" title="是" />
					</div>
				</div>
			</div>
			<div class="layui-form-item center">
				<div class="layui-inline">
					<button class="layui-btn" lay-submit lay-filter="submit">提交</button>
					<button type="reset" class="layui-btn btn-close layui-btn-primary">关闭</button>
				</div>
			</div>
		</form>
	</div>
	</div>

</body>
</html>